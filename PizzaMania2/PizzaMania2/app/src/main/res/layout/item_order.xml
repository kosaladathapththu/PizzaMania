<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="#FFFFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Order ID + Status Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Order ID -->
            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order #1234"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D32F2F" />

            <!-- Status badge -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#2E7D32"
                android:background="@drawable/status_background"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Customer Info -->
        <TextView
            android:id="@+id/tvCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Customer: John Doe"
            android:textSize="15sp"
            android:textColor="#444444" />

        <!-- Total Price -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Total: Rs. 1450"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Location with icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

<!--            <ImageView-->
<!--                android:layout_width="16dp"-->
<!--                android:layout_height="16dp"-->
<!--                android:src="@drawable/ic_location"-->
<!--                app:tint="#3A2222" />       &lt;!&ndash; ✔️ &ndash;&gt;-->


<!--           &lt;!&ndash; <TextView-->
<!--                android:id="@+id/tvLocation"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="6dp"-->
<!--                android:text="Location: Colombo 07"-->
<!--                android:textSize="15sp"-->
<!--                android:textColor="#444444" />&ndash;&gt;-->
        </LinearLayout>

        <!-- Action Buttons -->
<!--        <Button-->
<!--            android:id="@+id/btnTrackOrder"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:backgroundTint="#D32F2F"-->
<!--            android:text="Track Order"-->
<!--            android:textColor="#FFFFFF"-->
<!--            android:textStyle="bold" />-->

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#1976D2"
            android:text="Update Order"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
