<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/card_background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <!-- Authentication Activity Theme -->
    <style name="AuthTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Text Input Layout Style -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="startIconTint">@color/primary_color</item>
        <item name="endIconTint">@color/primary_color</item>
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">4dp</item>
        <item name="rippleColor">@color/white_20</item>
    </style>

    <!-- Outlined Button Style -->
    <style name="OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white_40</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@color/white_20</item>
    </style>

    <!-- Text Button Style -->
    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/accent_light</item>
    </style>

    <!-- Card Style -->
    <style name="AuthCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">12dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Title Text Style -->
    <style name="TitleText">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <!-- Subtitle Text Style -->
    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_80</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Body Text Style -->
    <style name="BodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Caption Text Style -->
    <style name="CaptionText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Link Text Style -->
    <style name="LinkText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- âœ… Alias for Manifest usage -->
    <style name="Theme.PizzaMania" parent="AppTheme" />

</resources>
