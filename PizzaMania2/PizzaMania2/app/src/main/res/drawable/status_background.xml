<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- light green fill -->
    <solid android:color="#E8F5E9" />

    <!-- green border -->
    <stroke
        android:width="1dp"
        android:color="#A5D6A7" />

    <!-- rounded corners -->
    <corners android:radius="8dp" />

    <!-- small inner padding (optional) -->
    <padding
        android:left="4dp"
        android:top="2dp"
        android:right="4dp"
        android:bottom="2dp" />
</shape>
