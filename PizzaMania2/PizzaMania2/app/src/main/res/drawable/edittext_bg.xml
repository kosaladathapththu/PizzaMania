<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- White background -->
    <solid android:color="#FFFFFF"/>

    <!-- Red border -->
    <stroke
        android:width="2dp"
        android:color="#cc2828"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Padding inside -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>

    <!-- Optional: subtle shadow for elevation (works on Android 5+) -->
    <size android:height="50dp"/>
</shape>
